{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "strict": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "noPropertyAccessFromIndexSignature": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": "src",
    "paths": {
      "@tw": ["tw.ts"],
      "@screens/*": ["screens/*"],
      "@screens": ["screens/index"],
      "@api/*": ["api/*"],
      "@component/*": ["component/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@env": ["env.d.ts"]
    }
  }
}
